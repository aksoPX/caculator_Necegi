<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="caculator.MainPage"
             Title="Necegi Calculator"
             BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <Grid HeightRequest="150">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#4facfe" Offset="0.1" />
                        <GradientStop Color="#00f2fe" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Label Text="necegi калькулятор
                                  Создано аксом :3"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>

            <VerticalStackLayout Spacing="20" Padding="25" Margin="0,-30,0,0">

                <Border StrokeShape="RoundRectangle 20"
                        StrokeThickness="0"
                        BackgroundColor="White"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,5" Radius="10" Opacity="0.1" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="15">
                        <Label Text="Параметры расчета" FontSize="18" FontAttributes="Bold" TextColor="#2F3640" />

                        <VerticalStackLayout Spacing="5">
                            <Label Text="Текущий опыт" TextColor="#000000" FontSize="14" Margin="5,0"/>
                            <Entry x:Name="ExperienceEntry" 
                                   Placeholder="0"
                                   Keyboard="Numeric"
                                   BackgroundColor="#54555f"
                                   TextColor="Black" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="Требуемый опыт" TextColor="#000000" FontSize="14" Margin="5,0"/>
                            <Entry x:Name="RequiredExperienceEntry" 
                                   Placeholder="0"
                                   Keyboard="Numeric"
                                   BackgroundColor="#54555f"
                                   TextColor="Black" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="Множитель (Multiplier)" TextColor="#000000" FontSize="14" Margin="5,0"/>
                            <Entry x:Name="MultiplierEntry" 
                                   Placeholder="1.0"
                                   Keyboard="Numeric"
                                   BackgroundColor="#54555f"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <VerticalStackLayout Spacing="12">
                    <Button x:Name="CalculateExpButton"
                            Text="Рассчитать опыт"
                            Clicked="OnCalculateExpClicked"
                            BackgroundColor="#1a1ac7"
                            TextColor="Black"
                            FontAttributes="Bold"
                            HeightRequest="55"
                            CornerRadius="15">
                        <Button.Shadow>
                            <Shadow Brush="#4facfe" Offset="0,4" Radius="5" Opacity="0.3" />
                        </Button.Shadow>
                    </Button>

                    <Button x:Name="CalculateGoldButton"
                            Text="Рассчитать золото"
                            Clicked="OnCalculateGoldClicked"
                            BackgroundColor="#1a1ac7"
                            TextColor="Black"
                            FontAttributes="Bold"
                            HeightRequest="55"
                            CornerRadius="15">
                        <Button.Shadow>
                            <Shadow Brush="#00fbff" Offset="0,4" Radius="5" Opacity="0.3" />
                        </Button.Shadow>
                    </Button>
                </VerticalStackLayout>

                <Border x:Name="ResultFrame"
                        IsVisible="False"
                        StrokeShape="RoundRectangle 15"
                        BackgroundColor="#2F3640"
                        Padding="20">
                    <Label x:Name="ResultLabel"
                           FontSize="18"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           FontAttributes="Italic" />
                </Border>

                <Label Text="Created by aksolotol"
                       FontSize="12"
                       TextColor="#000000"
                       HorizontalOptions="Center"
                       Margin="0,10,0,20" />

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>